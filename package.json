{
	"name": "nosconformes-api",
	"version": "0.0.1",
	"description": "This is a software created by BlackElephant from Brazil.",
	"author": "Guilherme Sartori",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"graphql": "ts-node generate-typings",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"typeorm:mc": "cd src/providers/database/migrations && typeorm-ts-node-commonjs migration:create",
		"typeorm:mr": "typeorm-ts-node-commonjs -d ./src/providers/database/typeorm-datasource.ts migration:run"
	},
	"dependencies": {
		"@nestjs-modules/mailer": "^1.8.1",
		"@nestjs/apollo": "^10.1.7",
		"@nestjs/common": "^9.0.0",
		"@nestjs/config": "^2.2.0",
		"@nestjs/core": "^9.0.0",
		"@nestjs/graphql": "^10.1.7",
		"@nestjs/jwt": "^10.0.1",
		"@nestjs/passport": "^9.0.0",
		"@nestjs/platform-express": "^9.0.0",
		"@nestjs/swagger": "^6.1.4",
		"@nestjs/typeorm": "^9.0.1",
		"apollo-server-express": "^3.11.1",
		"bcrypt": "^5.1.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.13.2",
		"graphql": "^16.6.0",
		"hbs": "^4.2.0",
		"node-mocks-http": "^1.12.1",
		"nodemailer": "^6.9.1",
		"passport": "^0.6.0",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"pg": "^8.8.0",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.2.0",
		"typeorm": "^0.3.11",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@compodoc/compodoc": "^1.1.19",
		"@nestjs/cli": "^9.0.0",
		"@nestjs/schematics": "^9.0.0",
		"@nestjs/testing": "^9.2.1",
		"@types/bcrypt": "^5.0.0",
		"@types/express": "^4.17.13",
		"@types/jest": "29.2.4",
		"@types/node": "^16.11.10",
		"@types/nodemailer": "^6.4.7",
		"@types/passport-jwt": "^3.0.8",
		"@types/passport-local": "^1.0.34",
		"@types/supertest": "^2.0.11",
		"@types/uuid": "^9.0.0",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.2.1",
		"jest": "29.3.1",
		"prettier": "^2.3.2",
		"source-map-support": "^0.5.20",
		"supertest": "^6.1.3",
		"ts-jest": "29.0.3",
		"ts-loader": "^9.2.3",
		"ts-morph": "^17.0.1",
		"ts-node": "10.7.0",
		"tsconfig-paths": "4.1.1",
		"typescript": "4.5.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"!<rootDir>/src/modules/**/dtos/*",
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"moduleNameMapper": {
			"^src/(.*)$": "<rootDir>/$1"
		}
	}
}
